{
    "name": "payment-system",
    "version": "0.0.1",
    "description": "A REST API of a standard payment system",
    "author": "Stanislav Zavalishin <javascript.nodejs.developer@gmail.com>",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stanisdev/Payment-System.git"
    },
    "homepage": "https://github.com/stanisdev/Payment-System#readme",
    "bugs": {
        "url": "https://github.com/stanisdev/Payment-System/issues"
    },
    "keywords": [
        "node.js",
        "postgresql",
        "redis",
        "nestjs",
        "typeorm",
        "api",
        "typescript",
        "payment-system"
    ],
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build && yarn run postbuild",
        "postbuild": "cp -R src/common/mailer/templates dist/src/common/mailer",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "nest start",
        "start:dev": "NODE_ENV=development nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "NODE_ENV=production node dist/main",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:up": "MIGRATION_MODE=true ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run -d src/db/dataSource.ts",
        "migration:down": "MIGRATION_MODE=true ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert -d src/db/dataSource.ts",
        "drop:database:schema": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm schema:drop -d src/db/dataSource.ts",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "sh ./test/run.sh",
        "test:quick": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^8.0.0",
        "@nestjs/config": "^2.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/swagger": "^5.2.1",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "glob": "^8.0.3",
        "helmet": "^5.1.0",
        "i18next": "^21.8.1",
        "ioredis": "^5.0.4",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "moment": "^2.29.3",
        "nanoid": "^3.3.3",
        "nodemailer": "^6.7.5",
        "pg": "^8.7.3",
        "pino": "^7.11.0",
        "pug": "^3.0.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-ui-express": "^4.4.0",
        "typeorm": "^0.3.6"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.1.0",
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "27.4.1",
        "@types/node": "^16.0.0",
        "@types/nodemailer": "^6.4.4",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.5",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    }
}
