{
    "name": "payment-system",
    "version": "0.0.1",
    "description": "A REST API of a standard payment system",
    "author": "Stanislav Zavalishin <javascript.nodejs.developer@gmail.com>",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stanisdev/Payment-System.git"
    },
    "homepage": "https://github.com/stanisdev/Payment-System#readme",
    "bugs": {
        "url": "https://github.com/stanisdev/Payment-System/issues"
    },
    "keywords": [
        "node.js",
        "postgresql",
        "redis",
        "nestjs",
        "typeorm",
        "api",
        "typescript",
        "payment-system"
    ],
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "nest start",
        "start:dev": "dotenvx run -f .env.development.local -- nest start --watch",
        "start:debug": "dotenvx run -f .env.development.local -- nest start --debug --watch",
        "start:prod:api": "NODE_ENV=production API_TYPE=api dotenvx run -f .env.production -- node dist/main",
        "start:prod:admin": "NODE_ENV=production API_TYPE=admin dotenvx run -f .env.production -- node dist/main",
        "seeders": "NODE_ENV=development dotenvx run -f .env.development.local -- ts-node src/db/scripts/runSeeders.ts",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:up:local": "MIGRATION_MODE=true dotenvx run -f .env.development.local -- ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run -d src/db/dataSource.ts",
        "migration:down:local": "MIGRATION_MODE=true dotenvx run -f .env.development.local -- ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert -d src/db/dataSource.ts",
        "drop:database:schema:local": "dotenvx run -f .env.development.local -- ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm schema:drop -d src/db/dataSource.ts",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "sh ./test/run.sh",
        "test:quick": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@dotenvx/dotenvx": "1.11.5",
        "@nestjs/common": "11.0.1",
        "@nestjs/config": "4.0.2",
        "@nestjs/core": "11.0.1",
        "@nestjs/jwt": "11.0.1",
        "@nestjs/passport": "11.0.5",
        "@nestjs/platform-express": "11.0.1",
        "@nestjs/swagger": "^11.2.1",
        "amqplib": "^0.10.5",
        "bcrypt": "5.1.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.2",
        "glob": "10.3.3",
        "helmet": "7.0.0",
        "i18next": "23.4.1",
        "ioredis": "5.3.2",
        "lodash": "4.17.21",
        "moment": "2.29.4",
        "nodemailer": "6.9.4",
        "pg": "8.11.2",
        "pino": "8.14.2",
        "pug": "3.0.2",
        "reflect-metadata": "0.2.2",
        "rimraf": "5.0.1",
        "rxjs": "7.8.1",
        "swagger-ui-express": "5.0.0",
        "typeorm": "0.3.27"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.0.2",
        "@nestjs/cli": "11.0.0",
        "@nestjs/schematics": "11.0.0",
        "@nestjs/testing": "11.0.1",
        "@types/amqplib": "^0.10.6",
        "@types/express": "5.0.0",
        "@types/jest": "30.0.0",
        "@types/node": "22.10.7",
        "@types/nodemailer": "6.4.9",
        "@types/supertest": "2.0.12",
        "@typescript-eslint/eslint-plugin": "5.59.11",
        "@typescript-eslint/parser": "5.59.11",
        "eslint": "8.42.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-prettier": "4.2.1",
        "jest": "29.5.0",
        "prettier": "3.4.2",
        "source-map-support": "0.5.21",
        "supertest": "7.0.0",
        "ts-jest": "29.2.5",
        "ts-loader": "9.5.2",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.7.3"
    }
}
