{
    "name": "payment-system",
    "version": "0.0.1",
    "description": "A REST API of a standard payment system",
    "author": "Stanislav Zavalishin <javascript.nodejs.developer@gmail.com>",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stanisdev/Payment-System.git"
    },
    "homepage": "https://github.com/stanisdev/Payment-System#readme",
    "bugs": {
        "url": "https://github.com/stanisdev/Payment-System/issues"
    },
    "keywords": [
        "node.js",
        "postgresql",
        "redis",
        "nestjs",
        "typeorm",
        "api",
        "typescript",
        "payment-system"
    ],
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build && yarn run postbuild",
        "postbuild": "cp -R src/common/mailer/templates dist/src/common/mailer",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "nest start",
        "start:dev": "NODE_ENV=development nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "NODE_ENV=production node dist/main",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:up": "MIGRATION_MODE=true ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run -d src/db/dataSource.ts",
        "migration:down": "MIGRATION_MODE=true ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert -d src/db/dataSource.ts",
        "drop:database:schema": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm schema:drop -d src/db/dataSource.ts",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "sh ./test/run.sh",
        "test:quick": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "10.0.0",
        "@nestjs/config": "3.0.0",
        "@nestjs/core": "10.0.0",
        "@nestjs/platform-express": "10.0.0",
        "@nestjs/swagger": "7.1.6",
        "bcrypt": "5.1.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.0",
        "glob": "10.3.3",
        "helmet": "7.0.0",
        "i18next": "23.4.1",
        "ioredis": "5.3.2",
        "jsonwebtoken": "9.0.1",
        "lodash": "4.17.21",
        "moment": "2.29.4",
        "nodemailer": "6.9.4",
        "pg": "8.11.2",
        "pino": "8.14.2",
        "pug": "3.0.2",
        "reflect-metadata": "0.1.13",
        "rimraf": "5.0.1",
        "rxjs": "7.8.1",
        "swagger-ui-express": "5.0.0",
        "typeorm": "0.3.17"
    },
    "devDependencies": {
        "@faker-js/faker": "8.0.2",
        "@nestjs/cli": "10.0.0",
        "@nestjs/schematics": "10.0.0",
        "@nestjs/testing": "10.0.0",
        "@types/express": "4.17.17",
        "@types/jest": "29.5.2",
        "@types/node": "20.3.1",
        "@types/nodemailer": "6.4.9",
        "@types/supertest": "2.0.12",
        "@typescript-eslint/eslint-plugin": "5.59.11",
        "@typescript-eslint/parser": "5.59.11",
        "eslint": "8.42.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-prettier": "4.2.1",
        "jest": "29.5.0",
        "prettier": "2.8.8",
        "source-map-support": "0.5.21",
        "supertest": "6.3.3",
        "ts-jest": "29.1.0",
        "ts-loader": "9.4.3",
        "ts-node": "10.9.1",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.1.3"
    }
}
